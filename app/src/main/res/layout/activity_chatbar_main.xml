<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@android:color/white">

    <FrameLayout
        android:id="@+id/chatbar_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">


            <RadioButton
                android:id="@+id/radio0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:drawableTop="@drawable/news"
                android:checked="true"
                android:text="@string/btn_liaoba_message"
                android:background="@drawable/billiard_search_radio_bg"
                />

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center_horizontal"
                android:drawableTop="@drawable/contact"
                android:textColor="@color/white"
                android:text="@string/btn_liaoba_contact"
                android:background="@drawable/billiard_search_radio_bg"/>

            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center_horizontal"
                android:drawableTop="@drawable/add_buddy"
                android:textColor="@color/white"
                android:text="@string/btn_liaoba_add_friend"
                android:background="@drawable/billiard_search_radio_bg"/>
        </RadioGroup>

        <TextView
            android:id="@+id/new_msg_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/tab_unread_bg"
            android:gravity="center"
            android:visibility="gone"
            android:text="1"
            android:textColor="@color/white"/>
    </RelativeLayout>


</LinearLayout>