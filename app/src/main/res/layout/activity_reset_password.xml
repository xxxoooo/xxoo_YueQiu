<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/devide_line"
    android:orientation="vertical"
    android:id="@+id/login_root_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_shape"
            android:orientation="vertical">

            <EditText
                android:id="@+id/reset_new_pwd"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:drawableLeft="@drawable/password"
                android:drawablePadding="10dp"
                android:hint="@string/new_password"
                android:textColorHint="@color/edit_text_hint_color"
                android:textColor="@color/md__defaultBackground"
                android:singleLine="true" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/devide_line"/>

                <EditText
                    android:id="@+id/reset_again_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:drawableLeft="@drawable/password"
                    android:drawablePadding="10dp"
                    android:hint="@string/again_new_password"
                    android:textColorHint="@color/edit_text_hint_color"
                    android:password="true"
                    android:textColor="@color/md__defaultBackground"
                    android:singleLine="true" />

        </LinearLayout>

        <Button
            android:id="@+id/reset_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="40dp"
            android:clickable="true"
            android:background="@drawable/login_button_bg"
            android:text="@string/sure"
            android:textSize="20sp"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/md__defaultBackground"
            android:text="@string/have_no_account_yet" />
        <TextView
            android:id="@+id/reset_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/login_btn_normal"
            android:textSize="18sp"
            android:text="@string/register_right_now" />
    </LinearLayout>
    <include
        layout="@layout/pre_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />


</RelativeLayout>