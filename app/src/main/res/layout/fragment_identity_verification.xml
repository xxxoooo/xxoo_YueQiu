<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="8dp"
            android:layout_gravity="center_horizontal"
            android:minHeight="?android:attr/listPreferredItemHeight">


            <ImageView
                android:id="@+id/account_iv"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/default_head"/>

            <LinearLayout
                android:layout_toRightOf="@id/account_iv"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerInParent="true">

                <TextView
                    android:textColor="@color/md__defaultBackground"
                    android:id="@+id/account_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:textSize="18sp"
                    android:text="雪花飘落"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/gender_tv"
                        style="@style/TimeTextStyle"
                        android:layout_margin="4dp"
                        android:drawablePadding="2dp"
                        android:padding="2dp"
                        android:text="男"
                        android:textSize="14sp"
                        android:drawableRight="@drawable/male"
                        android:background="@color/devide_line"/>

                    <TextView
                        android:id="@+id/district_tv"
                        style="@style/TimeTextStyle"
                        android:layout_margin="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="海淀区"
                        android:textSize="14sp"
                        android:background="@color/devide_line"/>
                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_corner_round_bg">

        <EditText
            android:id="@+id/verification_news_ed"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:gravity="top"
            android:background="@null"
            android:layout_height="120dp"
            android:textColorHint="@color/edit_text_hint_color"
            android:hint="我是....."/>
    </FrameLayout>


</LinearLayout>