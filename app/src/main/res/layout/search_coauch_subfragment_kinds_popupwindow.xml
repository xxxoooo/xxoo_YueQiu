<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <!--用于教练Fragment当中的球种筛选的popupWindow-->

    <Button
        style="@style/PopupWindowTvStyle"
        android:textColor="@color/login_btn_normal"
        android:id="@+id/btn_search_coauch_kinds_popup_no_filter"
        android:text="@string/search_coauch_filter_kinds_no_filter"
        android:padding="5dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/login_btn_normal"/>

    <ListView
        android:id="@+id/list_search_coauch_kinds_filter_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="0.5dp"
        android:divider="@color/devide_line">

    </ListView>

</LinearLayout>