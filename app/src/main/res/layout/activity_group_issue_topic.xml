<?xml version="1.0" encoding="utf-8"?>
<com.yueqiu.view.GroupTopicScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    android:id="@+id/topic_scroll_view">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/topic_root_relative_view">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/devide_line"
        android:orientation="vertical"
        android:weightSum="8">

        <LinearLayout
            android:id="@+id/topic_up_emotion"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/login_shape"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:weightSum="1">
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/search_feedback_acti_title_indi_str"
                    style="@style/ListItemTvStyle"/>
                <EditText
                    android:id="@+id/group_issue_title"
                    android:layout_width="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:singleLine="true"
                    android:layout_height="20dp"
                    android:textColor="@color/md__defaultBackground"/>
            </LinearLayout>

            <LinearLayout
                android:background="@color/devide_line"
                android:layout_width="match_parent"
                android:layout_height="1dp">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/group_issue_type_linear"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/basic_textview_bg">
                <TextView
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/billiard_topic_type"
                    style="@style/ListItemTvStyle"/>
                <TextView
                    android:id="@+id/group_issue_type"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/arrow"
                    android:textColor="@color/md__defaultBackground"/>
            </LinearLayout>

            <LinearLayout
                android:background="@color/devide_line"
                android:layout_width="match_parent"
                android:layout_height="1dp">
            </LinearLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginRight="10dp">
                <TextView
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/search_feedback_acti_content_indi_str"
                    style="@style/ListItemTvStyle"
                    />
                <ImageView
                    android:id="@+id/topic_backup_expression"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/emotion_bg"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"/>
            </RelativeLayout>
            <com.rockerhieu.emojicon.EmojiconEditText
                android:id="@+id/group_issue_content"
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="top"
                android:background="@null"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/md__defaultBackground"/>
            <RelativeLayout
                android:id="@+id/topic_expression_relative"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerVertical="true"
                    android:src="@drawable/emotion_bg"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/group_issue_express"
                    android:visibility="gone"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/devide_line"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:visibility="gone"
            android:id="@+id/topic_emotion_container"/>
        <LinearLayout
            android:id="@+id/topic_img_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/login_shape"
            android:orientation="horizontal"
            android:padding="2dp">
            <com.yueqiu.view.IssueImageView
                android:id="@+id/group_issue_add_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add_img_bg"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/group_issue_upload_photo_fail_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/md__defaultBackground"
                android:textSize="14sp"
                android:visibility="gone"
                android:layout_marginLeft="5dp"/>
            <ProgressBar
                android:id="@+id/group_upload_photo_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                />
         </LinearLayout>
        <!--<GridView-->
            <!--android:id="@+id/topic_grid_view"-->
            <!--android:background="@android:color/white"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0dp"-->
            <!--android:layout_weight="1.8"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:numColumns="4"-->
            <!--android:horizontalSpacing="10dp"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:verticalSpacing="3dp"-->
            <!--android:paddingLeft="10dp"-->
            <!--android:paddingBottom="5dp"-->
            <!--android:paddingTop="5dp"/>-->
    </LinearLayout>

        <include
            layout="@layout/pre_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
</com.yueqiu.view.GroupTopicScrollView>