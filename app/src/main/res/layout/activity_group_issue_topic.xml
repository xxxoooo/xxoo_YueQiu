<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/devide_line"
        android:orientation="vertical"
        android:weightSum="8">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/login_shape"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:weightSum="1">
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/search_feedback_acti_title_indi_str"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md__defaultBackground"/>
                <EditText
                    android:id="@+id/group_issue_title"
                    android:layout_width="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:singleLine="true"
                    android:layout_height="20dp"
                    android:textColor="@color/md__defaultBackground"/>
            </LinearLayout>

            <LinearLayout
                android:background="@color/devide_line"
                android:layout_width="match_parent"
                android:layout_height="1dp">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/group_issue_type_linear"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/basic_textview_bg">
                <TextView
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/billiard_topic_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md__defaultBackground"/>
                <TextView
                    android:id="@+id/group_issue_type"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/arrow"
                    android:textColor="@color/md__defaultBackground"/>
            </LinearLayout>

            <LinearLayout
                android:background="@color/devide_line"
                android:layout_width="match_parent"
                android:layout_height="1dp">
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/search_feedback_acti_content_indi_str"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md__defaultBackground"
                    />
            </LinearLayout>
            <EditText
                android:id="@+id/group_issue_content"
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="top"
                android:background="@null"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/md__defaultBackground"/>
            <RelativeLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerVertical="true"
                    android:src="@drawable/expression"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/group_issue_express" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/devide_line"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/login_shape"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/group_issue_add_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add_img"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>