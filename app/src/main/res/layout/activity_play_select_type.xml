<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/play_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:gravity="center_vertical">

        <TextView
            style="@style/ListItemTvStyle"
            android:layout_marginLeft="10dp"
            android:text="@string/group_activity"
            android:textSize="18sp" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/play_group_iv"
            android:layout_width="wrap_content"
            android:src="@drawable/choose"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/devide_line" />

    <RelativeLayout
        android:id="@+id/play_meet_star"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:gravity="center_vertical">

        <TextView
            style="@style/ListItemTvStyle"
            android:layout_marginLeft="10dp"
            android:text="@string/meet_star"
            android:textSize="18sp" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/play_meet_star_iv"
            android:layout_width="wrap_content"
            android:src="@drawable/choose"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/devide_line" />

    <RelativeLayout
        android:id="@+id/play_billiard_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:gravity="center_vertical">

        <TextView
            style="@style/ListItemTvStyle"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="@string/billiard_show"
            android:textSize="18sp" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/play_billiard_show_iv"
            android:layout_width="wrap_content"
            android:src="@drawable/choose"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/devide_line" />

    <RelativeLayout
        android:id="@+id/play_competition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:gravity="center_vertical">

        <TextView
            style="@style/ListItemTvStyle"
            android:layout_marginLeft="10dp"
            android:text="@string/complete"
            android:textSize="18sp" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/play_competition_iv"
            android:layout_width="wrap_content"
            android:src="@drawable/choose"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/devide_line" />

    <RelativeLayout
        android:id="@+id/play_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:gravity="center_vertical">

        <TextView
            style="@style/ListItemTvStyle"
            android:layout_marginLeft="10dp"
            android:text="@string/billiard_other"
            android:textSize="18sp" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/play_other_iv"
            android:layout_width="wrap_content"
            android:src="@drawable/choose"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/devide_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5">

    </LinearLayout>
</LinearLayout>