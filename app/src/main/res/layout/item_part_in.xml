<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/partin_item_bg_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/published_item_bg"
    android:layout_weight="4">
    <!--<com.android.volley.toolbox.NetworkImageView-->
        <!--android:id="@+id/partin_item_image"-->
        <!--android:layout_width="@dimen/listview_item_user_photo_width"-->
        <!--android:layout_height="@dimen/listview_item_user_photo_height"-->
        <!--android:layout_marginTop="8dp"-->
        <!--android:layout_marginBottom="8dp"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:src="@drawable/default_head"/>-->
    <com.yueqiu.view.CustomNetWorkImageView
        android:id="@+id/partin_item_image"
        android:layout_width="@dimen/listview_item_user_photo_width"
        android:layout_height="@dimen/listview_item_user_photo_height"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/default_head"/>
    <TextView
        android:id="@+id/partin_title"
        style="@style/ListItemTvStyle"
        android:layout_alignTop="@+id/partin_item_image"
        android:layout_toRightOf="@+id/partin_item_image"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/published_time"
        />
    <TextView
        android:id="@+id/partin_content"
        android:layout_alignLeft="@+id/partin_title"
        android:ellipsize="end"
        android:textSize="15sp"
        style="@style/TimeTextStyle"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/published_time"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:layout_alignBottom="@+id/partin_item_image"
        />
    <TextView
        android:id="@+id/partin_time"
        style="@style/TimeTextStyle"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>
