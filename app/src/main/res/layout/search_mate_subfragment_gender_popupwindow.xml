<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="5dp"
    android:padding="4dp">

    <Button
        style="@style/PopupWindowTvStyle"
        android:id="@+id/search_room_popupwindow_nofilter"
        android:text="@string/gender"
        android:padding="5dp"
        android:textColor="@color/login_btn_normal"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/login_btn_normal">
    </View>

    <Button
        style="@style/PopupWindowTvStyle"
        android:id="@+id/search_mate_popupwindow_male"
        android:text="@string/man"
        android:layout_margin="2dp"
        android:textColor="@color/md__defaultBackground"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/devide_line">
    </View>

    <Button
        style="@style/PopupWindowTvStyle"
        android:id="@+id/search_mate_popupwindow_female"
        android:text="@string/man"
        android:layout_margin="2dp"
        android:textColor="@color/md__defaultBackground"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/devide_line">
    </View>


</LinearLayout>